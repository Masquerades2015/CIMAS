    <link rel="shortcut icon" href="@Url.Content("~/Content/Style/favicon.ico")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/Content/Style/css/css.css")" />
    <script src="../../Scripts/jquery-2.1.0.min.js" type="text/javascript"></script>
</head>
<body style=" background:url(@Url.Content("~/Content/Style/images/bg.jpg"));">
    <!-- ImageReady Slices (denglu.psd) -->
    @using (Html.BeginForm())
    { 
        <div class="denglu_main_bg">
            <table class="denglu_main" id="__01" width="980" height="700" border="0" cellpadding="0"
                cellspacing="0">
                <tr>
                    <td>
                        <img src="@Url.Content("~/Content/Style/images/denglu_01.jpg")" width="207" height="171" alt=""/>
                    </td>
                    <td>
                        <img src="@Url.Content("~/Content/Style/images/denglu_02.jpg")" width="565" height="171" alt=""/>
                    </td>
                    <td>
                        <img src="@Url.Content("~/Content/Style/images/denglu_03.jpg")" width="208" height="171" alt=""/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <img src="@Url.Content("~/Content/Style/images/denglu_04.jpg")" width="207" height="278" alt=""/>
                    </td>
                    <td width="565" height="278" valign="top" class="denglu_form">
                        <ul>
                            <li class="denglu_text">
                                <input id="UserName" maxlength="20" name="UserName" type="text" value="@Model.UserName" /></li>
                            <li class="denglu_text">
                                <input id="Password" maxlength="20" name="Password" type="password" value="@Model.Password" /></li>
                            
                            <li>
                            <a class="denglu_tijiao icon" id="btnSubmit" href="#"></a>
                            <a class="denglu_regist icon" style="margin-left:7px" id="btnRegist" href="@Url.Action("Register", "Account")">
                            </a></li>
                        </ul>
                    </td>
                    <td>
                        <img src="@Url.Content("~/Content/Style/images/denglu_06.jpg")" width="208" height="278" alt=""/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <img src="@Url.Content("~/Content/Style/images/denglu_07.jpg")" width="207" height="251" alt=""/>
                    </td>
                    <td width="565" valign="top" class="denglu_bottom">
                        高新技术企业信息备案系统
                        @{Html.RenderAction("Version", "Site");}
                        版权所有 北京市科学技术委员会
                                        <br />
                业务支持：010-64874216 01064853155-802
                &nbsp;
                技术支持：13521434017 13521434007 13521429849
                <br />
                客服邮箱：talent_service@126.com
                    </td>
                    <td>
                        <img src="@Url.Content("~/Content/Style/images/denglu_09.jpg")" width="208" height="251" alt=""/>
                    </td>
                </tr>
            </table>
        </div>
        <!-- End ImageReady Slices -->
    }
</body>
</html>
<script type="text/javascript">
    $(function () {
        $("#UserName").focus();

        //当在用户名输入框回车时，密码框获取焦点
        $("#UserName").keydown(function (event) {
            if (event.keyCode == 13) {
                $("#Password").focus();
            }
        })
        //密码框回车，表单提交
        $("#Password").keydown(function (event) {
            if (event.keyCode == 13) {
                $("form").submit();
            }
        })

        var btnSubmit = $("#btnSubmit");
        btnSubmit.click(function () {
            $("form").submit();
        })

    })
</script>
