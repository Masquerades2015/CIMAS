@model IEnumerable<CIMAS.DAL.StuBasicIfo>

@{
    Layout = "~/Views/Shared/_Layout_New.cshtml";
    ViewBag.Title = "List";
}

<div class="index_xtitle">
            <tr>
                <th width="150px">
                    学号
                </th>
                <th width="150px">
                    姓名
    <ul>
        <li class="index_xtitle_l icon"></li>
        <li class="index_xtitle_c">@Html.ActionLink(" ", "Edit", new { id = 0, code = "HH01" }, new { @class = "index_xtitle_creat icon" })
            学员信息</li>
        <li class="index_xtitle_r icon"></li>
    </ul>
</div>
<div class="list">
    <table cellpadding="0" cellspacing="0">
        <thead>
                </th>
                <th width="150px">
                    性别
                </th>
                <th width="150px">
                    生日
                </th>
                <th width="110px">
                    编辑
                </th>
            </tr>
        </thead>
        <tbody>

            @{
                if(Model != null)
                {
                    foreach (var item in Model.OrderByDescending(p => p.StuCode))
                    {
                        <tr>
                            <td>
                                @item.StuCode
                            </td>                         
                            
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Sex
                            </td>
                            <td>
                                @{
                                    String RegDate = "";
                                    if (item.Birthdate == null)
                                    {
                                    @RegDate;
                                    }
                                    else
                                    {
                                        DateTime b = ((DateTime)item.Birthdate);
                                    @b.ToString("yyyy-MM-dd");
                                    }
                                }
                            </td>
                            <td>
                                @Html.ActionLink("编辑", "Edit", new { id = item.ID, code = "HH02" }) |
                                @Html.ActionLink("删除", "Delete", new { id = item.ID, code = "HH02" })
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>
