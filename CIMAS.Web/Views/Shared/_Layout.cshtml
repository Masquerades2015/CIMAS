@using TalentMIS.Web.HtmlHelpers
@{
    Layout = null; 
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>
        @{Html.RenderAction("ZhTitle", "Site");}
    </title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <link href="@Url.Content("~/Content/images/style_biz.css")" rel="stylesheet" type="text/css" />    
    <script src="~/Content/My97DatePicker/WdatePicker.js" type="text/javascript"></script>    
    <script src="../../Scripts/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
           
    
</head>
<body>
    <div class="hou_t">
        <!--  =========================================  顶部Banner开始  ================================================ -->
        @{Html.RenderPartial("Banner");}
        <!--  =========================================  顶部Banner结束  ================================================ -->
        <!--  =========================================  中间部分 开始  ================================================ -->
        <div class="main_ht" style="background-color:rgb(47, 157, 232)">
            <div class="lf_ht" style="">
                <h3>
                    系统菜单</h3>
                <div class="lf_menu">
                    <div id="levelmenu">
                        @Html.Menu()
                    </div>
                </div>
            </div>
            <!--  ================== 竖分隔条 =====================  -->
            ﻿@{Html.RenderPartial("Spliter");}
            <!--  =========================================  -->
            <div id='kg' class="rg_ht" style="background-color: #FFF">
                <h3>
                    位置：
                    @if (ViewBag.IsShowPath == true)
                    {
                        Html.RenderAction("NavPath", "Home", "code");
                    }
                    else
                    {
                        @Html.Raw("首页");
                    }
                </h3>
                <div style="background-color: #FFF">
                    <div class="sysmsg">
                    </div>
                    @RenderBody()
                </div>
            </div>
            <div class="clear">
            </div>
            <!--  =========================================  -->
        </div>
        <!--  =========================================  中间部分 结束  ================================================ -->
        <!-- ======================================  页脚 开始  ============================================= -->
        ﻿@{Html.RenderPartial("Footer");}
        <!-- ======================================  页脚 结束  ============================================= -->
    </div>
    <script type="text/javascript">
         //页面初始化（设置导航菜单、提示信息、控件样式等）
         $(document).ready(function () {
             /* 统一设置文本框、按钮的样式 开始  */
             $("input[type=text]").addClass("text");
             $("input[type=submit]").addClass("button");
             $("input[type=button]").addClass("button");
             $("input[type=file]").addClass("text");
             $("input[type=password]").addClass("text");
             /* 统一设置文本框、按钮的样式 结束  */
         });

        //页面初始化（设置系统提示信息）
        $(document).ready(function () { 
            /* 系统提示信息 自动隐藏 开始 */            
            var msgflag=@(ViewBag.msgflag ?? -1);//邹伟 2012-05-17 设置默认值为-1 ，修复msgflag=0时不提示消息 bug
            //获取系统提示信息字符串（邹伟重构2012-05-09）
            var msg= '@Html.Raw(ViewBag.sysmsg ?? "")';
            $("div.sysmsg").showMessage(msg, msgflag);
            /* 系统提示信息 自动隐藏 结束 */
        });

    </script>
</body>
</html>
