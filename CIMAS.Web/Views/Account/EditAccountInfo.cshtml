            <strong class="color1">密码</strong><span>@Html.PasswordFor(x => x.Password)</span>
        </td>*@
        <td style="padding-top: 10px;">
            <strong class="color1">确认密码</strong><span>@Html.Password("Confirm")</span>
        </td>
    </tr>
    <tr>
        <td colspan="2" style=" text-align:center;">
            <a class="bianji_tijiao icon" id="btnSubmit" href="#"></a>
        </td>
    </tr>
    </table>
}
<script type="text/javascript">
    $(function () {
        $("#btnSubmit").click(function () {
            $("form").submit();
        })
    })
</script>
